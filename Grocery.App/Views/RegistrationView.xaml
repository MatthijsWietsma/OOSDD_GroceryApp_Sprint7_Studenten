<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegistrationView"
             x:DataType="vm:RegistrationViewModel"
             Title="RegistrationView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Naam" Text="{Binding Name}"/>
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" />
        <Entry Placeholder="Herhaal Wachtwoord" Text="{Binding PasswordRepetition}" IsPassword="True" />
        <Button Text="Register" Command="{Binding RegisterCommand}" />
        <Label Text="{Binding RegisterMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>